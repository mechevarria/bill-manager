<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="api">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.billdb.api.defaults.DefaultsModel</class>
        <class>org.billdb.api.defaults.DefaultIncome</class>
        <class>org.billdb.api.defaults.DefaultExpense</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://bill-vm:3306/billDb?useTimezone=true&amp;serverTimezone=UTC&amp;useSSL=false" />
            <property name="javax.persistence.jdbc.user" value="app" />
            <property name="javax.persistence.jdbc.password" value="app" />
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
