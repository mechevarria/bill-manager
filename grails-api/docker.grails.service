[Unit]
Description=grails docker Service
Requires=docker.mysql.service

[Service]
ExecStart=/usr/bin/docker run --rm --name=grails --network app-net -p 8080:8080 quay.io/mechevarria/grails-api:latest
ExecStop=/usr/bin/docker stop grails
ExecReload=/usr/bin/docker restart grails

[Install]
WantedBy=multi-user.target
